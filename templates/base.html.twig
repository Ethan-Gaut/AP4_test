<nav class="navbar bg-primary navbar-expand-lg navTaille navCouleur" data-bs-theme="dark">
    <div class="container-fluid">
        <!-- Logo à gauche -->
        <a class="navbar-brand" href="{{ path('app_home') }}" style="font-size: 2rem">Liemie</a>

        <div class="collapse navbar-collapse justify-content-between">
            <!-- Menus publics (Accueil, Équipe) -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link {{ app.current_route == 'app_home' ? 'active' : '' }}" href="{{ path('app_home') }}" style="font-size: 1.5rem;">Accueil</a>
                </li>
                <li class="nav-item">
                    <h1 style="color: rgba(255, 255, 255, 0.55)">-</h1>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.current_route == 'equipepage' ? 'active' : '' }}" href="{{ path('equipepage') }}" style="font-size: 1.5rem;">Équipe</a>
                </li>
            </ul>

            <!-- Menus liés aux rôles (centrés) -->
            <ul class="navbar-nav mx-auto">
                {% if is_granted('ROLE_PATIENT') and not is_granted('ROLE_ADMIN') and not is_granted('ROLE_INFIRMIERE') %}
                    <li class="nav-item">
                        <span class="nav-link disabled" style="font-size: 1.5rem; color: rgba(255, 255, 255, 0.55);">Menu patient :</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.current_route == 'app_rdv' ? 'active' : '' }}" href="{{ path('app_rdv') }}" style="font-size: 1.5rem;">Rendez-vous</a>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_INFIRMIERE') and not is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <span class="nav-link disabled" style="font-size: 1.5rem; color: rgba(255, 255, 255, 0.55);">Menu infirmière :</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.current_route == 'app_visite' ? 'active' : '' }}" href="{{ path('app_visite') }}" style="font-size: 1.5rem;">Visites</a>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <span class="nav-link disabled" style="font-size: 1.5rem; color: rgba(255, 255, 255, 0.55);">Menu administrateur :</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.current_route == 'admin' ? 'active' : '' }}" href="{{ path('admin') }}" style="font-size: 1.5rem;">Dashboard</a>
                    </li>
                {% endif %}
            </ul>

            <!-- Connexion/Déconnexion à droite -->
            <ul class="navbar-nav">
                {% if app.user %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_profil') }}" style="font-size: 1.5rem;">Profil</a>
                </li>
                <li class="nav-item">
                    <h1 style="color: rgba(255, 255, 255, 0.55)">-</h1>
                </li>
                {% endif %}

                <li class="nav-item">
                    {% if app.user %}
                        <a class="nav-link" href="{{ path('app_logout') }}" style="font-size: 1.5rem;">Déconnexion</a>
                    {% else %}
                        <a class="nav-link {{ app.current_route == 'app_login' ? 'active' : '' }}" href="{{ path('app_login') }}" style="font-size: 1.5rem;">Connexion</a>
                    {% endif %}
                </li>
            </ul>
        </div>
    </div>
</nav>





<div class="container my-4" >
    {% block body %}{% endblock %}
</div>
</body>
</html>