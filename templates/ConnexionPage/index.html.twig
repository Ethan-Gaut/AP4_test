{% extends 'base.html.twig' %}


{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Connexion ✅</h1>
    </div>
    <a class="nav-link {{ app.current_route == 'app_login' ? 'active' : '' }}" href="{{ path('app_login') }}">Login</a>
    <a class="nav-link {{ app.current_route == 'app_register' ? 'active' : '' }}" href="{{ path('app_register') }}">register</a>

    {% if is_granted('ROLE_ADMIN') %}
        <p>Bienvenue administrateur !</p>
    {% elseif is_granted('ROLE_INFIRMIERE') %}
        <p>Bienvenue infirmière !</p>
    {% elseif is_granted('ROLE_PATIENT') %}
        <p>Bienvenue patient !</p>
    {% endif %}
{% endblock %}